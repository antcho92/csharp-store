@{
    ViewData["Title"] = "Orders";
}
<h1>Orders</h1>
@model entityStore.Models.OrderViewModel
<form asp-action="CreateOrder">
    <div asp-validation-summary="All" class='errors'></div>
    <div class="form-group">
        <label asp-for="CustomerId"></label>
        <select asp-for="CustomerId" name="" id="">
            @Html.Partial("~/Views/Partials/CustomerPartial.cshtml", "ViewBag.Customers")
        </select>
    </div>
    <div class="form-group">
        <label asp-for="ProductId"></label>
        <select asp-for="ProductId" name="" id="">
            @Html.Partial("~/Views/Partials/ProductPartial.cshtml", "ViewBag.Products")
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" type="number">
    </div>
    <button type="submit" class="btn btn-success">Create Order</button>
</form>